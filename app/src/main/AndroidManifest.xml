<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.examples.rehan.rehan">


    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.Activities.SplashActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Activities.MainActivity" />
        <activity
            android:name=".Activities.Activities.ViewpagerActivity"
            android:theme="@style/FragmentTheme"
            android:label="BOOK"/>
        <activity android:name=".Activities.Activities.RechargeActivity" />
        <activity android:name=".Activities.Activities.ShopActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>